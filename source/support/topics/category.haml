- content_for :header do
  %header.aptible-header.hero-gradient--angled.aptible-header--single-grid.aptible-header--with-breadcrumbs
    = partial 'partials/main-nav', locals: {      |
        nav_items: 'partials/support/nav-items',  |
        section_title: 'Support',                 |
        section_url: '/support',                  |
        signup: 'link'                            |
      }                                           |

    .grid-container
      %h1.heading__title--centered= @title
      %h2.heading__subtitle--centered= @description

%nav.nav-list--breadcrumb
  .grid-container
    %a.nav-item{:href => '/support'} Support
    %span.nav-item--separator
    %a.nav-item{:href => '/support/topics/'} Topics
    %span.nav-item--separator
    %a.nav-item{:href => "/support/topics/#{@category.slug}" }= @title

.content
  .grid-container
    .articles
      - (category.articles || []).each do |article|
        - next if article.hidden
        .articles__item
          %a.articles__link{ href: "/support/topics/#{article.url}" }
            %h2= article.title

  = partial 'partials/resources-footer'
