        = partial "images/icons/osx.svg"
      .card__body
        %h3 macOS
        %p Download the macOS binary.

    %a.grid-item.card.toolbelt-platform{ href: '#windows', class: 'windows' }
      .card__header.toolbelt-platform--logo
        = partial "images/icons/windows.svg"
      .card__body
        %h3 Windows
        %p Download the Windows binary.

    %a.grid-item.card.toolbelt-platform{ href: '#ubuntu', class: 'ubuntu' }
      .card__header.toolbelt-platform--logo
        = partial "images/icons/ubuntu.svg"
      .card__body
        %h3 Ubuntu
        %p
          Download a binary for Ubuntu
          = data.toolbelt.os.ubuntu.keys[0]
          or
          = data.toolbelt.os.ubuntu.keys[1]

    %a.grid-item.card.toolbelt-platform{ href: '#debian', class: 'debian' }
      .card__header.toolbelt-platform--logo
        = partial "images/icons/debian.svg"
      .card__body
        %h3 Debian
        %p
          Download a binary for Debian
          = data.toolbelt.os.debian.keys[0]
          or
          = data.toolbelt.os.debian.keys[1]

    %a.grid-item.card.toolbelt-platform{ href: '#enterprise-linux', class: 'enterprise-linux' }
      .card__header.toolbelt-platform--logo
        = partial "images/icons/enterprise-linux.svg"
      .card__body
        %h3 Enterprise Linux
        %p
          Download a binary for Enterprise Linux
          = data.toolbelt.os.centos.keys[0]
          or
          = data.toolbelt.os.centos.keys[1]

